<% layout("/layout/boilerplate") %>
<body>
  <h2>Edit Listing</h2>
  <form method="post" action="/listing/<%= listing._id %>?_method=PUT">
    <input
      type="text"
      value="<%= listing.title %>"
      name="listing[title]"
    /><br /><br />
    <input
      type="text"
      value="<%= listing.description %>"
      name="listing[description]"
    /><br /><br />
    <input
      type="text"
      value="<%= listing.image.url %>"
      name="listing[image.url]"
    /><br /><br />
    <input
      type="text"
      value="<%= listing.price %>"
      name="listing[price]"
    /><br /><br />
    <input
      type="text"
      value="<%= listing.country %>"
      name="listing[country]"
    /><br /><br />
    <input
      type="text"
      value="<%= listing.location %>"
      name="listing[location]"
    /><br /><br />
    <button>edit</button>
  </form>
</body>
